{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "#/*": ["src/*"],
      "#apis/*": ["src/common/apis/*"],
      "#configs/*": ["src/common/configs/*"],
      "#databases/*": ["src/databases/*"],
      "#middlewares/*": ["src/common/middlewares/*"]
    }
  }
}
